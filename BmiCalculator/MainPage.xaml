<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"       
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#181818"
    x:Class="BmiCalculator.MainPage">
    

    <VerticalStackLayout VerticalOptions="Center" Spacing="25" Margin="10">
        <Label
            Text="BMI Calculator" 
            TextColor="#cccccc" 
            HorizontalTextAlignment="Center"
            FontSize="30"
            FontAttributes="Bold"/>
        <Entry BackgroundColor="#2a2a2a"
               x:Name="Weight"
               Placeholder="Weight in Kgs"
               PlaceholderColor="#7d7c7c"
               Keyboard="Numeric"
               TextColor="#cccccc"/>
        <Entry BackgroundColor="#2a2a2a"
               x:Name="Height"
               Placeholder="Height in Metres"
               PlaceholderColor="#7d7c7c"
               Keyboard="Numeric"
               TextColor="#cccccc"/>
        <Entry BackgroundColor="#2a2a2a"
               Placeholder="Your BMI"
               x:Name="BMI"
               IsEnabled="False"
               PlaceholderColor="#7d7c7c"
               TextColor="#cccccc"
               TextChanged=""/>
        <Button Text="CALCULATE"
                BackgroundColor="#0078D4"
                TextColor="White"
                Clicked="Button_clicked"/>
    </VerticalStackLayout>


</ContentPage>
